#!/usr/bin/env bash

# - name: setup
#   run: |
#     echo "API_URL=${{ github.api_url }}/repos/${{ github.repository }}" >> $GITHUB_ENV
#     echo "GITHUB_TOKEN=${{ secrets.ACCESS_PASS }}" >> $GITHUB_ENV

# - name: create pull request
#   run: |
#     git checkout development
#     bin/create-pr

[ -z "$GITHUB_ENV" ] || . $GITHUB_ENV

if [ -z "$GITHUB_TOKEN" ]; then
  echo "GITHUB_TOKEN is not setup"
  exit 1
fi

[ -z "$API_URL" ] && API_URL="https://api.github.com/repos/pfapi/cicd-test"

owner=$(basename $(dirname $API_URL))
repo=$(basename $API_URL)

echo $owner $repo

curl -X POST $API_URL/pulls \
  -H "Accept: application/vnd.github.luke-cage-preview+json" \
  -H "Authorization: token $GITHUB_TOKEN" \
  -H "Content-Type: application/json" \
  --data-binary @- <<DATA
{
"owner": "$owner",
"repo": "$repo",
"title": "merge into main to release",
"body": "released by $GITHUB_TRIGGERING_ACTOR @ $(date)",
"head": "development",
"base": "main"
}
DATA

